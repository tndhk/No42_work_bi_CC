# Environment
ENV=local

# API
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_DEBUG=false

# Authentication
JWT_SECRET_KEY=your-secret-key-min-32-chars-here-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Password Policy
PASSWORD_MIN_LENGTH=8

# DynamoDB
DYNAMODB_ENDPOINT=http://dynamodb-local:8000
DYNAMODB_REGION=ap-northeast-1
DYNAMODB_TABLE_PREFIX=bi_

# S3
S3_ENDPOINT=http://minio:9000
S3_REGION=ap-northeast-1
S3_BUCKET_DATASETS=bi-datasets
S3_BUCKET_STATIC=bi-static
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin

# Vertex AI
VERTEX_AI_PROJECT_ID=your-gcp-project-id
VERTEX_AI_LOCATION=asia-northeast1
VERTEX_AI_MODEL=gemini-1.5-pro

# Executor
EXECUTOR_ENDPOINT=http://executor:8080
EXECUTOR_TIMEOUT_CARD=10
EXECUTOR_TIMEOUT_TRANSFORM=300
EXECUTOR_MAX_CONCURRENT_CARDS=10
EXECUTOR_MAX_CONCURRENT_TRANSFORMS=5

# Scheduler (Transform cron)
SCHEDULER_ENABLED=false
SCHEDULER_INTERVAL_SECONDS=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
# Set to false for E2E tests or development
RATE_LIMIT_ENABLED=true
